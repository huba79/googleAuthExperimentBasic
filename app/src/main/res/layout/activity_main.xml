<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="insideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/googleLoginButtonId"
            style="@style/actionButtonStyle"
            android:layout_margin="5dp"
            android:text="@string/loginButtonCaption" />

        <TextView
            android:id="@+id/resultViewId"
            style="@style/textViewStyle"
            android:layout_margin="5dp"
            android:text="@string/lorem_ipsum" />

        <Button
            android:id="@+id/queryButtonId"
            style="@style/actionButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/query_button_caption" />

        <TextView
            android:id="@+id/queryResultView"
            style="@style/textViewStyle"
            android:layout_height="300sp"
            android:layout_margin="5dp"
            android:text="TextView" />

        <Button
            android:id="@+id/googleLogoutButtonId"
            style="@style/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginVertical="25dp"
            android:text="@string/logoutButtonCaption" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>